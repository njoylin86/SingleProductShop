{% comment %}
  Shopify Section: Aurora Testimonials Carousel
  Visar kundrecensioner som en carousel med Splide.js
  – Alla färger följer nu det color scheme du väljer i Theme Editor –
{% endcomment %}

<!-- Splide CSS -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.3/dist/css/splide.min.css"
/>

<style>
  .font-montserrat { font-family: 'Montserrat', sans-serif; }

  /* Låt sectionen ärva ditt valda color scheme */
  .testimonial-card {
    /* Bakgrund och kant följer theme-variablerna för yta & border */
    background: var(--color-background);
    border: 1px solid var(--color-border);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    padding: 1.5rem;
    border-radius: 1rem;
    min-height: 200px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  /* Textfärger följer theme-variablerna för text & accent */
  .testimonial-quote {
    color: var(--color-foreground);
  }
  .testimonial-author {
    color: var(--color-accent);
  }
</style>

<section
  id="testimonials-{{ section.id }}"
  class="section-padding {{ section.settings.color_scheme }}"
>
  <div class="page-width mx-auto px-6 text-center mb-12">
    {% if section.settings.super_heading != blank %}
      <h2 class="text-4xl font-montserrat font-semibold mb-4">
        {{ section.settings.super_heading | escape }}
      </h2>
    {% endif %}
    {% if section.settings.section_description != blank %}
      <div class="text-lg max-w-2xl mx-auto">
        {{ section.settings.section_description }}
      </div>
    {% endif %}
  </div>

  {% if section.blocks.size > 0 %}
    <div id="splide-{{ section.id }}" class="splide page-width">
      <div class="splide__track">
        <ul class="splide__list">
          {% for block in section.blocks %}
            <li class="splide__slide">
              <div class="testimonial-card">
                {% if block.settings.quote != blank %}
                  <p class="italic mb-4 testimonial-quote">
                    “{{ block.settings.quote | escape }}”
                  </p>
                {% endif %}
                {% if block.settings.author != blank %}
                  <p class="font-semibold testimonial-author mt-auto">
                    – {{ block.settings.author | escape }}
                  </p>
                {% endif %}
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  {% endif %}
</section>

<!-- Splide JS med defer -->
<script
  defer
  src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.3/dist/js/splide.min.js"
></script>
<script defer>
  document.addEventListener('DOMContentLoaded', function () {
    new Splide('#splide-{{ section.id }}', {
      type      : 'loop',
      perPage   : 3,
      gap       : '1rem',
      pagination: false,
      breakpoints: {
        1024: { perPage: 2 },
         640: { perPage: 1 },
      },
    }).mount();
  });
</script>

{% schema %}
{
  "name": "Boh Testimonials Carousel",
  "max_blocks": 20,
  "settings": [
    {
      "type": "text",
      "id": "super_heading",
      "label": "Super Heading",
      "default": "Echoes of Enchantment"
    },
    {
      "type": "richtext",
      "id": "section_description",
      "label": "Section Description",
      "default": "<p>Hear from those who've welcomed Aurora into their spaces.</p>"
    },
    {
      "type": "header",
      "content": "Color scheme"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Välj färgschema"
    }
  ],
  "blocks": [
    {
      "type": "testimonial_item",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "The Aurora light is simply magical..."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "Alex P., Interior Designer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Aurora Testimonials Carousel",
      "blocks": [
        { "type": "testimonial_item" },
        {
          "type": "testimonial_item",
          "settings": {
            "quote": "I was looking for a unique statement piece...",
            "author": "Sarah K., Tech Enthusiast"
          }
        },
        {
          "type": "testimonial_item",
          "settings": {
            "quote": "Sleek, modern, and the light it casts is just... wow.",
            "author": "Michael B., Architect"
          }
        }
      ]
    }
  ]
}
{% endschema %}
