{% comment %}
  Shopify Section: Aurora Testimonials Carousel
  Visar kundrecensioner som en carousel med Splide.js
  -- Alla färger är nu konfigurerbara via Theme settings --
{% endcomment %}

<!-- Splide CSS -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.3/dist/css/splide.min.css"
/>

<style>
  .font-montserrat { font-family: 'Montserrat', sans-serif; }

  /* Använder Liquid-variabler för färgerna */
  .testimonial-card {
    background: {{ section.settings.card_bg_color }};
    border: 1px solid {{ section.settings.card_border_color }};
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    padding: 1.5rem;
    border-radius: 1rem;
    min-height: 200px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .testimonial-quote-color {
    color: {{ section.settings.quote_text_color }};
  }
  .testimonial-author-color {
    color: {{ section.settings.author_text_color }};
  }
  .super-heading-color {
    color: {{ section.settings.heading_color }};
  }
  .description-text-color {
    color: {{ section.settings.description_color }};
  }
</style>

<section
  id="testimonials-{{ section.id }}"
  class="section-padding"
  style="background-color: transparent;"
>
  <div class="page-width mx-auto px-6 text-center mb-12">
    {% if section.settings.super_heading != blank %}
      <h2 class="text-4xl font-montserrat font-semibold mb-4 super-heading-color">
        {{ section.settings.super_heading | escape }}
      </h2>
    {% endif %}
    {% if section.settings.section_description != blank %}
      <div class="text-lg max-w-2xl mx-auto description-text-color">
        {{ section.settings.section_description }}
      </div>
    {% endif %}
  </div>

  {% if section.blocks.size > 0 %}
    <div id="splide-{{ section.id }}" class="splide page-width">
      <div class="splide__track">
        <ul class="splide__list">
          {% for block in section.blocks %}
            <li class="splide__slide">
              <div class="testimonial-card">
                {% if block.settings.quote != blank %}
                  <p class="italic mb-4 testimonial-quote-color">
                    “{{ block.settings.quote | escape }}”
                  </p>
                {% endif %}
                {% if block.settings.author != blank %}
                  <p class="font-semibold testimonial-author-color mt-auto">
                    – {{ block.settings.author | escape }}
                  </p>
                {% endif %}
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  {% endif %}
</section>

<!-- Splide JS med defer -->
<script
  defer
  src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.3/dist/js/splide.min.js"
></script>
<script defer>
  document.addEventListener('DOMContentLoaded', function () {
    new Splide('#splide-{{ section.id }}', {
      type      : 'loop',
      perPage   : 3,
      gap       : '1rem',
      pagination: false,
      breakpoints: {
        1024: { perPage: 2 },
         640: { perPage: 1 },
      },
    }).mount();
  });
</script>

{% schema %}
{
  "name": "BOH Testimonials Carousel",
  "max_blocks": 20,
  "settings": [
    {
      "type": "text",
      "id": "super_heading",
      "label": "Super Heading",
      "default": "Echoes of Enchantment"
    },
    {
      "type": "richtext",
      "id": "section_description",
      "label": "Section Description",
      "default": "<p>Hear from those who've welcomed Aurora into their spaces.</p>"
    },
    {
      "type": "color",
      "id": "card_bg_color",
      "label": "Card Background Color",
      "default": "#1D1919"
    },
    {
      "type": "color",
      "id": "card_border_color",
      "label": "Card Border Color",
      "default": "rgba(255,255,255,0.1)"
    },
    {
      "type": "color",
      "id": "quote_text_color",
      "label": "Quote Text Color",
      "default": "#D1D5DB"
    },
    {
      "type": "color",
      "id": "author_text_color",
      "label": "Author Text Color",
      "default": "#FFBF00"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Text Color",
      "default": "#A0AEC0"
    }
  ],
  "blocks": [
    {
      "type": "testimonial_item",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "The Aurora light is simply magical..."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "Alex P., Interior Designer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Aurora Testimonials Carousel",
      "blocks": [
        { "type": "testimonial_item" },
        {
          "type": "testimonial_item",
          "settings": {
            "quote": "I was looking for a unique statement piece...",
            "author": "Sarah K., Tech Enthusiast"
          }
        },
        {
          "type": "testimonial_item",
          "settings": {
            "quote": "Sleek, modern, and the light it casts is just... wow.",
            "author": "Michael B., Architect"
          }
        }
      ]
    }
  ]
}
{% endschema %}
