<style>
.aurora-cta-section {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60px 0;
}

.aurora-cta-card {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  border-radius: 32px;
  background: #f5f5f5;
  max-width: 900px;
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0;
}

.aurora-cta-content {
  flex: 1 1 0;
  padding: 40px 32px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.aurora-cta-heading {
  margin: 0 0 18px 0;
  text-align: left;
}

.aurora-cta-text {
  margin-bottom: 28px;
}

.aurora-cta-buttons {
  display: flex;
  gap: 16px;
}

.aurora-cta-button {
  padding: 12px 28px;
  border: none;
  border-radius: 24px;
  background: #e0e0e0;
  cursor: pointer;
  /* No color/font styling as requested */
}

.aurora-cta-images {
  flex: 1 1 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
  position: relative;
  min-width: 220px;
  padding: 0 32px 0 0;
  box-sizing: border-box;
}

.aurora-cta-image1 {
  width: 120px;
  height: 180px;
  background: #d0d0d0;
  border-radius: 18px;
  object-fit: cover;
  position: absolute;
  top: 40px;
  right: 60px;
}

.aurora-cta-image2 {
  width: 80px;
  height: 120px;
  background: #b0b0b0;
  border-radius: 18px;
  object-fit: cover;
  position: absolute;
  bottom: 40px;
  right: 0;
}

@media (max-width: 900px) {
  .aurora-cta-card {
    flex-direction: column;
    border-radius: 24px;
  }
  .aurora-cta-content {
    padding: 32px 16px;
  }
  .aurora-cta-images {
    min-width: 0;
    min-height: 180px;
    padding: 0 0 32px 0;
    height: 200px;
    position: relative;
  }
  .aurora-cta-image1 {
    position: absolute;
    top: 0;
    right: 40px;
    width: 90px;
    height: 120px;
  }
  .aurora-cta-image2 {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 60px;
    height: 90px;
  }
}

@media (max-width: 600px) {
  .aurora-cta-card {
    border-radius: 14px;
  }
  .aurora-cta-content {
    padding: 20px 6px;
  }
  .aurora-cta-images {
    height: 120px;
  }
  .aurora-cta-image1 {
    width: 60px;
    height: 80px;
    right: 24px;
    top: 0;
  }
  .aurora-cta-image2 {
    width: 40px;
    height: 60px;
    right: 0;
    bottom: 0;
  }
}
</style>

<section class="aurora-cta-section color-{{ section.settings.color_scheme | default: 'background-1' }}">
  <div class="aurora-cta-card">
    <div class="aurora-cta-content">
      <h2 class="aurora-cta-heading">{{ section.settings.heading | default: "CTA Heading" }}</h2>
      <p class="aurora-cta-text">{{ section.settings.text | default: "This is a short paragraph of placeholder text for your call-to-action section." }}</p>
      <div class="aurora-cta-buttons">
        <button class="aurora-cta-button">Download App</button>
        <button class="aurora-cta-button">Download App</button>
      </div>
    </div>
    <div class="aurora-cta-images">
      <img class="aurora-cta-image1" src="https://placehold.co/120x180" alt="Placeholder 1">
      <img class="aurora-cta-image2" src="https://placehold.co/80x120" alt="Placeholder 2">
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Aurora CTA",
  "tag": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "CTA Heading"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Paragraph text",
      "default": "This is a short paragraph of placeholder text for your call-to-action section."
    }
  ],
  "presets": [
    {
      "name": "Aurora CTA"
    }
  ]
}
{% endschema %} 