{% comment %}
  Shopify Section: Aurora Hero

  Full-screen hero section with customizable background, text, and CTA.
  Ensure global styles for fonts and primary button appearance are set in your theme.
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} .hero-full-height {
    min-height: 100vh; /* Ensures full viewport height */
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    background-size: cover;
    background-position: center;
  }
  {% if section.settings.text_color != blank %}
    #shopify-section-{{ section.id }} .hero-text-color {
      color: {{ section.settings.text_color }};
    }
  {% endif %}
  {% if section.settings.button_bg_color != blank and section.settings.button_text_color != blank %}
    #shopify-section-{{ section.id }} .hero-cta-button {
      background-color: {{ section.settings.button_bg_color }};
      color: {{ section.settings.button_text_color }};
    }
    #shopify-section-{{ section.id }} .hero-cta-button:hover {
      background-color: {{ section.settings.button_bg_color | color_darken: 10 }}; /* Darken by 10% on hover */
    }
  {% endif %}
  .font-montserrat { /* Ensure this class is globally available or defined in your theme's CSS */
    font-family: 'Montserrat', sans-serif;
  }
</style>

<section
  id="hero-{{ section.id }}"
  class="hero-full-height"
  style="{% if section.settings.background_image %}background-image: url('{{ section.settings.background_image | image_url: width: 1920, height: 1080 }}');{% else %}background-color: #101010;{% endif %}"
  data-section-id="{{ section.id }}"
  data-section-type="aurora-hero"
>
  <div
    class="absolute inset-0 bg-black"
    style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
  ></div>
  <div class="text-center z-10 px-4 container mx-auto">
    {% if section.settings.headline != blank %}
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-montserrat font-bold mb-6 leading-tight hero-text-color">
        {{ section.settings.headline | escape }}
      </h1>
    {% endif %}
    {% if section.settings.subheadline != blank %}
      <div class="text-xl md:text-2xl mb-10 max-w-3xl mx-auto hero-text-color">
        {{ section.settings.subheadline }}
      </div>
    {% endif %}
    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a
        href="{{ section.settings.button_link }}"
        class="hero-cta-button font-semibold py-4 px-10 rounded-lg text-lg cta-button transition-all duration-300 ease-in-out hover:transform hover:-translate-y-0.5 hover:shadow-lg"
      >
        {{ section.settings.button_label | escape }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Aurora Hero",
  "tag": "section",
  "class": "aurora-hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Recommended size: 1920x1080px."
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Background Image Overlay Opacity",
      "default": 50
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Sculpt Atmosphere."
    },
    {
      "type": "richtext",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "<p>Introducing Aurora Light: a singular spotlight designed to transform your space with breathtaking prism effects and unparalleled ambient elegance.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Discover the Light"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#FFBF00"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#1D1919"
    }
  ],
  "presets": [
    {
      "name": "Aurora Hero"
    }
  ]
}
{% endschema %}