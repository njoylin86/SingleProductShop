
<section
  id="hero-{{ section.id }}"
  class="aurora-hero-section page-width"

  data-section-id="{{ section.id }}"
  data-section-type="aurora-hero"
>
  <div class ="align-vertically full-screen-height">
    {% if section.settings.headline != blank %}
      <h1>
        {{ section.settings.headline | escape }}
      </h1>
    {% endif %}

    {% if section.settings.subheadline != blank %}
      <div>
        {{ section.settings.subheadline }}
      </div>
    {% endif %}

    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}">
        {{ section.settings.button_label | escape }}
      </a>
    {% endif %}
  </div>
</section>
<script>
  
</script>
{% schema %}
{
  "name": "Aurora Hero",
  "tag": "section",
  "class": "aurora-hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Recommended size: 1920x1080px."
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Sculpt Atmosphere."
    },
    {
      "type": "richtext",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "<p>Introducing Aurora Light: a singular spotlight designed to transform your space with breathtaking prism effects and unparalleled ambient elegance.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Discover the Light"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }

  ],
  "presets": [
    {
      "name": "Aurora Hero"
    }
  ]
}
{% endschema %}