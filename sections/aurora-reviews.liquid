<style>
.aurora-reviews-section {
  padding: 60px 0;
  text-align: center;
}

.aurora-reviews-heading {
  margin-bottom: 40px;
}

.aurora-reviews-carousel {
  position: relative;
  overflow: hidden;
  max-width: 1200px;
  margin: 0 auto;
}

.aurora-reviews-track {
  display: flex;
  transition: transform 0.5s ease-in-out;
  gap: 30px;
}

.aurora-review-card {
  flex: 0 0 350px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  padding: 30px 25px;
  text-align: left;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.aurora-review-rating {
  display: flex;
  gap: 4px;
  margin-bottom: 15px;
}

.aurora-review-rating .star {
  color: #ffd700;
  font-size: 18px;
}

.aurora-review-text {
  font-style: italic;
  margin-bottom: 20px;
  line-height: 1.6;
  color: inherit;
}

.aurora-review-product {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 15px;
}

.aurora-review-product-image {
  width: 50px;
  height: 50px;
  border-radius: 8px;
  overflow: hidden;
  flex-shrink: 0;
}

.aurora-review-product-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.aurora-reviewer-name {
  font-weight: 600;
  color: inherit;
  margin: 0;
}

@media (max-width: 768px) {
  .aurora-review-card {
    flex: 0 0 300px;
    padding: 25px 20px;
  }
  
  .aurora-reviews-track {
    gap: 20px;
  }
}

/* Auto-scroll animation */
@keyframes scroll {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-100%);
  }
}

.aurora-reviews-track.auto-scroll {
  animation: scroll 30s linear infinite;
}

.aurora-reviews-track.auto-scroll:hover {
  animation-play-state: paused;
}
</style>

<section class="aurora-reviews-section color-{{ section.settings.color_scheme | default: 'background-1' }}">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="aurora-reviews-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    
    {% if section.blocks.size > 0 %}
      <div class="aurora-reviews-carousel">
        <div class="aurora-reviews-track auto-scroll">
          {% for block in section.blocks %}
            <div class="aurora-review-card" {{ block.shopify_attributes }}>
              <div class="aurora-review-rating">
                {% assign rating = block.settings.rating | default: 5 %}
                {% for i in (1..5) %}
                  <span class="star">{% if i <= rating %}★{% else %}☆{% endif %}</span>
                {% endfor %}
              </div>
              
              {% if block.settings.review_text != blank %}
                <div class="aurora-review-text">
                  "{{ block.settings.review_text }}"
                </div>
              {% endif %}
              
              {% if block.settings.product_image != blank %}
                <div class="aurora-review-product">
                  <div class="aurora-review-product-image">
                    <img src="{{ block.settings.product_image | img_url: '100x100' }}" alt="{{ block.settings.reviewer_name | escape }}">
                  </div>
                  <div>
                    <p class="aurora-reviewer-name">{{ block.settings.reviewer_name }}</p>
                  </div>
                </div>
              {% else %}
                <p class="aurora-reviewer-name">{{ block.settings.reviewer_name }}</p>
              {% endif %}
            </div>
          {% endfor %}
          
          <!-- Duplicate reviews for seamless loop -->
          {% for block in section.blocks %}
            <div class="aurora-review-card">
              <div class="aurora-review-rating">
                {% assign rating = block.settings.rating | default: 5 %}
                {% for i in (1..5) %}
                  <span class="star">{% if i <= rating %}★{% else %}☆{% endif %}</span>
                {% endfor %}
              </div>
              
              {% if block.settings.review_text != blank %}
                <div class="aurora-review-text">
                  "{{ block.settings.review_text }}"
                </div>
              {% endif %}
              
              {% if block.settings.product_image != blank %}
                <div class="aurora-review-product">
                  <div class="aurora-review-product-image">
                    <img src="{{ block.settings.product_image | img_url: '100x100' }}" alt="{{ block.settings.reviewer_name | escape }}">
                  </div>
                  <div>
                    <p class="aurora-reviewer-name">{{ block.settings.reviewer_name }}</p>
                  </div>
                </div>
              {% else %}
                <p class="aurora-reviewer-name">{{ block.settings.reviewer_name }}</p>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</section>

